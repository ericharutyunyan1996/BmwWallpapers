<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/toolbar_shadow"
    tools:context=".Activities.SplashActivity">

    <com.prush.typedtextview.TypedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="60sp"
        app:cursor_blink_speed="200"
        app:layout_constraintTop_toTopOf="parent"
        app:play_keystrokes_audio="false"
        app:randomize_type_seed="95"
        app:randomize_typing_speed="true"
        app:sentence_pause="0"
        app:show_cursor="false"
        app:split_sentences="true"
        app:typed_text="BMW " />

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:src="@drawable/bmw_splash" />
</androidx.constraintlayout.widget.ConstraintLayout>